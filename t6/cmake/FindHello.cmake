FIND_PATH(HELLO_INCLUDE_DIR hello.h /usr/local/include/hello /usr/include/hello)
FIND_LIBRARY(HELLO_LIBRARY NAMES hello PATH /usr/local/lib /usr/lib)
IF (HELLO_LIBRARY AND HELLO_INCLUDE_DIR)
  SET(HELLO_FOUND TRUE)
ENDIF(HELLO_LIBRARY AND HELLO_INCLUDE_DIR)
IF(HELLO_FOUND)
  IF (NOT HELLO_FOUND_QUIETLY)
    MESSAGE(STATUS "FOUND hello: ${HELLO_LIBRARY}")
  ENDIF(NOT HELLO_FOUND_QUIETLY)
ELSEIF(HELLO_FOUND)
  IF(HELLO_FOUND_REQUIRED)
    MESSAGE(FATAL_ERROR "Could not find hello library")
  ENDIF(HELLO_FOUND_REQUIRED)
ENDIF(HELLO_FOUND)
